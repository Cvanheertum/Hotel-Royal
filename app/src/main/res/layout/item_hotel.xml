<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/item_hotel_content_marginBottom"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/item_hotel_content_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_hotel_image"
            android:layout_width="@dimen/item_hotel_image_size"
            android:layout_height="@dimen/item_hotel_image_size"
            android:contentDescription="@string/image_contentDescription"
            android:src="@drawable/ic_user_place_holder"
            app:civ_border_color="@color/primary_text_color"
            app:civ_border_width="@dimen/item_hotel_image_circular_border_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_hotel_name_layout_marginStart"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                tools:text="Hotel Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/body_3_size" />

            <TextView
                android:id="@+id/tv_website"
                tools:text="Website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/body_2_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hotel_divider_height"
        android:layout_marginTop="@dimen/item_hotel_divider_marginTop"
        android:background="@color/divider_color"/>

</LinearLayout>